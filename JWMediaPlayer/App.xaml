<Application x:Class="JWMediaPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JWMediaPlayer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Icons.xaml" />
                <ResourceDictionary Source="Resources/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="BaseThickness" Left="5" Top="5" Right="5" Bottom="5" />
            <Thickness x:Key="BaseLeftThickness" Left="120" Top="5" Right="5" Bottom="5" />
            <Thickness x:Key="BaseRightThickness" Left="5" Top="5" Right="120" Bottom="5" />

            <Style x:Key="BaseTextBlock" TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="DarkGray" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>